<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %c{10} - %msg%n
                </pattern>>
            </PatternLayout>
            <!--<PatternLayout>-->
                <!--<pattern>-->
                    <!--[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{10} - %msg%n-->
                <!--</pattern>>-->
            <!--</PatternLayout>-->
        </Console>

    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.springframework.jdbc" level="trace" additivity="false">
            <AppenderRef ref="Console" level="trace"/>
        </Logger>
        <Logger name="ru.gotoqa" level="trace">
            <AppenderRef ref="Console" level="debug"/>
        </Logger>
    </Loggers>

</Configuration>